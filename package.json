{
  "//": "This Manifest file describes the build environment.",
  "name": "MetaTTT",
  "repository": {
    "type": "https://github.com/Lukeslux/MetaTTT"
  },
  "license": "MIT",
  "author": "Luc van den Brand",
  "scripts": {
    "pack-dev": "webpack --mode development",
    "pack-prod": "webpack --mode production",
    "doc": "esdoc",
    "test": "ava **/*.test.js",
    "dev": "webpack --mode development && nw pack/",
    "prod": "webpack --mode production && nwbuild --platforms win32,win64,osx64,linux32,linux64 --buildDir dist/ pack/"
  },
  "ava": {
    "require": [
      "@babel/register",
      "babel-polyfill",
      "./src/app/util/setup-browser-env.js"
    ]
  },
  "esdoc": {
    "source": "src/",
    "destination": "doc",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      }
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.0.0-beta.44",
    "@babel/register": "^7.0.0-beta.44",
    "ava": "1.0.0-beta.4",
    "babel-polyfill": "^6.26.0",
    "browser-env": "^3.2.5",
    "css-loader": "^0.28.11",
    "esdoc": "^1.0.3",
    "esdoc-standard-plugin": "^1.0.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "jquery": "^3.3.1",
    "jszip": "^3.1.5",
    "jszip-utils": "0.0.2",
    "nw": "^0.29.4",
    "nw-builder": "^3.5.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.14"
  }
}